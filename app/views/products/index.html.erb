    <% if current_user.admin? %>
    <%= link_to 'Редактировать', edit_product_path(product), class: "btn btn-success" %></td>
    <%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <% end %>
    <% end %>
