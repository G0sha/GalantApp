<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Имя товара", class: "control-label" %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Группа", class: "control-label" %><br>
    <%= f.select(:group, options_for_select([['-------',nil]] + update_group)) %>
  </div>
  <div class="form-group">
    <%= f.label "Подгруппа", class: "control-label" %><br>
    <%= f.select(:subgroup, options_for_select([['-------',nil]] + update_subgroup)) %>
  </div>
  <div class="form-group">
    <%= f.label "Описание", class: "control-label" %><br>
    <%= f.text_area :description, class: "form-control", size:"20x10" %>
  </div>
  <div class="form-group">
    <%= f.label "Изображение", class: "control-label" %><br>
    <%= image_tag(@product.image.thumb.url) if @product.image? %>
    <%= f.file_field :image, class: "form-control" %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="form-group">
    <%= f.label "Цена", class: "control-label" %><br>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить товар", class: "btn btn-primary" %>
  </div>
<% end %>
